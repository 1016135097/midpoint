<object xsi:type="PasswordPolicyType" version="0" xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-1.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<name>Testing Complex Password Policy</name>
	<description>Testing Complex password policy</description>
	<lifetime>
		<expiration>10</expiration>
		<warnBeforeExpiration>0</warnBeforeExpiration>
		<lockAfterExpiration>0</lockAfterExpiration>
		<minPasswordAge>0</minPasswordAge>
		<passwordHistoryLength>10</passwordHistoryLength>
	</lifetime>
	<complexity minSize="2" maxSize="8" minimumUniqueChars="1" checkAgainstDictionary="true">
		<limitLowers minOccurence="1" maxOccurence="10" maxSequence="0" canBeFirst="true" />
		<limitUppers minOccurence="1" maxOccurence="10" maxSequence="0" canBeFirst="true" />
		<limitNumbers minOccurence="1" maxOccurence="10" maxSequence="0" canBeFirst="true" />
		<limitSpecial minOccurence="1" maxOccurence="10" maxSequence="0" canBeFirst="true" />
	</complexity>
	<validCharClasses>
		<lowerChars>abcdefgh</lowerChars>
		<upperChars>ABCDEFGH</upperChars>
		<numberChars>1234568</numberChars>
		<specialChars>!@#,.</specialChars>
	</validCharClasses>
</object>