<objects version="0" xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-1.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<passwordPolicy xsi:type="PasswordPolicyType">
		<name>Testing Complex Password Policy</name>
		<description>Testing Complex password policy</description>
		<lifetime>
			<expiration>10</expiration>
			<warnBeforeExpiration>0</warnBeforeExpiration>
			<lockAfterExpiration>0</lockAfterExpiration>
			<minPasswordAge>0</minPasswordAge>
			<passwordHistoryLength>10</passwordHistoryLength>
		</lifetime>
		<stringPolicy>
			<limitations>
				<minimalLength>8</minimalLength>
				<maximalLength>10</maximalLength>
				<minimumUniqueCharacters>8</minimumUniqueCharacters>
				<checkAgainstDictionary>true</checkAgainstDictionary>
				<checkPattern>[a-Z]</checkPattern>
				<limit>
					<description>Require at least one lower char and not more the 4 and character cannot be on first place
					</description>
					<characterClass ref="ASCIIlowers" />
					<minOccurence>1</minOccurence>
					<maxOccurence>4</maxOccurence>
					<canBeFirst>false</canBeFirst>
				</limit>
				<limit>
					<description>Require at least one upper char and not more the 4 and character cannot be on first place
					</description>
					<characterClass ref="ASCIIuppers" />
					<minOccurence>1</minOccurence>
					<maxOccurence>4</maxOccurence>
					<canBeFirst>false</canBeFirst>
				</limit>
				<limit>
					<description>Require at least one number char and not more the 4 and character cannot be on first place
					</description>
					<characterClass ref="ASCIInumbers" />
					<minOccurence>1</minOccurence>
					<maxOccurence>4</maxOccurence>
					<canBeFirst>false</canBeFirst>
				</limit>
				<limit>
					<description>Require one special char and character cannot be on first place</description>
					<characterClass ref="ASCIIspecial" />
					<minOccurence>1</minOccurence>
					<maxOccurence>1</maxOccurence>
					<canBeFirst>false</canBeFirst>
				</limit>
				<limit>
					<description>Only "ABCDabcd" can be on first place</description>
					<characterClass>ABCDabcd</characterClass>
					<canBeFirst>true</canBeFirst>
				</limit>
			</limitations>
			<characterClass>
				<characterClass name="ASCIIlower">abcdefghijklmnopqrstuvwxyz</characterClass>
				<characterClass name="ASCIIupper">ABCDEFGHIJKLMNOPQRSTUVWXYZ</characterClass>
				<characterClass name="ASCIInumbers">0123456789</characterClass>
				<characterClass name="ASCIIspecial">‚ê†!"#$%&amp;'()*+,-./:;&lt;=&gt;?@[\]^_'{}|~</characterClass>
			</characterClass>
		</stringPolicy>
	</passwordPolicy>
</objects>