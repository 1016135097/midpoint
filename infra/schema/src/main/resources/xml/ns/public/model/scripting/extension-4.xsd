<xsd:schema targetNamespace="http://midpoint.evolveum.com/xml/ns/public/model/scripting/extension-4"
            xmlns:tns="http://midpoint.evolveum.com/xml/ns/public/model/scripting/extension-4"
            xmlns:a="http://prism.evolveum.com/xml/ns/public/annotation-4"
            xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-4"
            xmlns:s="http://midpoint.evolveum.com/xml/ns/public/model/scripting-4"
            xmlns:apit="http://midpoint.evolveum.com/xml/ns/public/common/api-types-4"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            elementFormDefault="qualified">

    <xsd:annotation>
        <xsd:documentation>
            Scripting task extensions.
        </xsd:documentation>
    </xsd:annotation>
    
    <!--<xsd:import namespace="http://midpoint.evolveum.com/xml/ns/public/common/common-4" -->
    			<!--schemaLocation="http://midpoint.evolveum.com/xml/ns/public/common/common-4"/>-->

    <xsd:import namespace="http://midpoint.evolveum.com/xml/ns/public/model/scripting-4"
                schemaLocation="http://midpoint.evolveum.com/xml/ns/public/model/scripting/scripting-4"/>

    <xsd:element name="executeScript" type="s:ExecuteScriptType">
        <xsd:annotation>
            <xsd:documentation>
                Script to be executed.
            </xsd:documentation>
            <xsd:appinfo>
            	<a:maxOccurs>1</a:maxOccurs>            <!-- TODO (maybe there could be more scripts) -->
            </xsd:appinfo>
        </xsd:annotation>
    </xsd:element>

</xsd:schema>


