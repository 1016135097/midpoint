		</xsd:annotation>
	</xsd:element>
		

	<xsd:complexType name="TimeoutsType">
		<xsd:annotation>
			<xsd:documentation>
				Type that contains configuration of ICF operation timeouts.
			</xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:element name="create" type="xsd:integer" minOccurs="0">
			</xsd:element>
			<xsd:element name="get" type="xsd:integer" minOccurs="0">
			</xsd:element>
			<xsd:element name="update" type="xsd:integer" minOccurs="0">
			</xsd:element>
			<xsd:element name="delete" type="xsd:integer" minOccurs="0">
			</xsd:element>
			<xsd:element name="test" type="xsd:integer" minOccurs="0">
			</xsd:element>
			<xsd:element name="scriptOnConnector" type="xsd:integer" minOccurs="0">
			</xsd:element>
			<xsd:element name="scriptOnResource" type="xsd:integer" minOccurs="0">
			</xsd:element>
			<xsd:element name="authentication" type="xsd:integer" minOccurs="0">
			</xsd:element>
			<xsd:element name="search" type="xsd:integer" minOccurs="0">
			</xsd:element>
			<xsd:element name="validate" type="xsd:integer" minOccurs="0">
