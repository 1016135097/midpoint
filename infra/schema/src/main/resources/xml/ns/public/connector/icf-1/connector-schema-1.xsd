	<xsd:element name="connectorPoolConfiguration" type="tns:ConnectorPoolConfigurationType">
		<xsd:annotation>
			<xsd:documentation>
				Element that contains configuration of ICF connector pools.
			</xsd:documentation>
		</xsd:annotation>
	</xsd:element>
	
	<xsd:element name="producerBufferSize" type="xsd:integer">
