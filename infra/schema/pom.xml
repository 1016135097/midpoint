<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<name>midPoint Infrastructure - schema</name>
	<groupId>com.evolveum.midpoint.infra</groupId>
	<artifactId>schema</artifactId>
	<packaging>jar</packaging>
	<parent>
		<artifactId>infra</artifactId>
		<groupId>com.evolveum.midpoint</groupId>
		<version>1.8</version>
	</parent>
	<organization>
		<name>Evolveum</name>
		<url>http://www.evolveum.com</url>
	</organization>
	<licenses>
		<license>
			<name>CDDL v1.0</name>
			<url>http://www.sun.com/cddl/cddl.html</url>
			<distribution>repo</distribution>
			<comments>A business-friendly OSS license</comments>
		</license>
	</licenses>
	<issueManagement>
		<system>Atlassian JIRA</system>
		<url>http://jira.evolveum.com/</url>
	</issueManagement>
	<scm>
		<connection>scm:svn:http://svn.evolveum.com/midpoint/tags/project-1.8</connection>
		<developerConnection>scm:svn:https://svn.evolveum.com/midpoint/tags/project-1.8</developerConnection>
		<tag>HEAD</tag>
		<url>https://fisheye.evolveum.com/midpoint/tags/project-1.8</url>
	</scm>
	<repositories>
		<repository>
			<id>evolveum</id>
			<name>repo</name>
			<url>http://repo.evolveum.com/repo</url>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>com.evolveum.midpoint.infra</groupId>
			<artifactId>util</artifactId>
			<version>1.8</version>
		</dependency>
		<dependency>
			<groupId>com.sun.xsom</groupId>
			<artifactId>xsom</artifactId>
			<version>20100725</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.2</version>
		</dependency>
		<dependency>
			<groupId>xml-resolver</groupId>
			<artifactId>xml-resolver</artifactId>
			<version>${xml.resolver.version}</version>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>${commons.lang.version}</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<!-- to generate sources from XSD -->
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<schemaIncludes>
						<include>xml/ns/public/resource/idconnector/configuration-1.xsd</include>
						<include>xml/ns/public/resource/idconnector/resource-schema-1.xsd</include>
						<include>xml/ns/public/resource/resource-schema-1.xsd</include>
					</schemaIncludes>
					<extension>true</extension>
					<strict>true</strict>
					<verbose>${verbose.jaxb}</verbose>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxws-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>wsimport</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<verbose>${verbose.jaxws}</verbose>
					<sourceDestDir>${project.build.directory}/generated-sources/jaxws</sourceDestDir>
					<wsdlDirectory>src/main/resources/xml/ns/</wsdlDirectory>
					<wsdlFiles>
						<wsdlFile>private/model/modelWrapper.wsdl</wsdlFile>
						<wsdlFile>private/model/passwordWrapper.wsdl</wsdlFile>
					</wsdlFiles>
				</configuration>
				<dependencies>
					<!-- <dependency>
						<groupId>com.sun.xml.ws</groupId>
						<artifactId>jaxws-tools</artifactId>
						<version>2.2.3</version>
					</dependency> -->
				</dependencies>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
        		<!--TODO TEXT. This plugin's configuration is used in m2e only.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.jvnet.jaxb2.maven2</groupId>
										<artifactId>maven-jaxb2-plugin</artifactId>
										<versionRange>[0.7.5,)</versionRange>
										<goals>
											<goal>generate</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore />
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.codehaus.mojo</groupId>
										<artifactId>jaxws-maven-plugin</artifactId>
										<versionRange>[1.10,)</versionRange>
										<goals>
											<goal>wsimport</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore />
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
