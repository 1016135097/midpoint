<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <id>executable</id>

    <formats>
        <format>jar</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>

            <useProjectArtifact>true</useProjectArtifact>

            <unpack>true</unpack>

            <scope>runtime</scope>

            <excludes>
                <exclude>net.sf.ehcache:*</exclude>
                <exclude>net.sf.jasperreports:*</exclude>
                <exclude>com.lowagie:*</exclude>
                <exclude>org.codehaus.castor:*</exclude>
                <exclude>org.apache.lucene:*</exclude>
                <exclude>org.olap4j:*</exclude>
                <exclude>com.google.zxing:*</exclude>
                <exclude>org.apache.wss4j:*</exclude>
                <exclude>com.google.guava:*</exclude>
                <exclude>org.cryptacular:*</exclude>
                <exclude>joda-time:*</exclude>
                <exclude>org.opensaml:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>

</assembly>