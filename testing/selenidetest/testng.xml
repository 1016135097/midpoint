<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="selenidetests" parallel="false">
    <test name="Log in Tests" parallel="false" preserve-order="true" verbose="10">
        <classes>

            <class name="com.evolveum.midpoint.testing.selenide.tests.LoginTest">
                <methods>
                    <exclude name="loginAndStay"/>
                </methods>
            </class>
        </classes>
    </test>
    <!-- Create user -> Import resource -> Test resource connection ->
     create account for the created user with the imported resource-->
    <test name="UserResourceAccountTest" parallel="false" preserve-order="true" verbose="10">
        <classes>
            <class name="com.evolveum.midpoint.testing.selenide.tests.LoginTest">
                <methods>
                    <include name="loginAndStay"/>
                </methods>
            </class>
            <class name="com.evolveum.midpoint.testing.selenide.tests.user.CreateUserTest">
                <methods>
                    <include name="createUserTest"/>
                </methods>
            </class>
            <class name="com.evolveum.midpoint.testing.selenide.tests.resource.ImportResourceTest">
                <methods>
                    <include name="importResourceTest"/>
                </methods>
            </class>
            <class name="com.evolveum.midpoint.testing.selenide.tests.resource.CheckResourceConnectionTest">
                <methods>
                    <include name="checkResourceConnectionTest"/>
                </methods>
            </class>
            <class name="com.evolveum.midpoint.testing.selenide.tests.account.CreateAccountTest">
                <methods>
                    <include name="createAccountForUserTest"/>
                </methods>
            </class>
           <class name="com.evolveum.midpoint.testing.selenide.tests.Util">
                <methods>
                    <include name="closeTest"/>
                </methods>
            </class>
        </classes>
    </test>
