<role oid="12345678-d34d-b33f-f00d-555555556666"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-2a"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-2a"
        xmlns:t="http://prism.evolveum.com/xml/ns/public/types-2"
        xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance/10000000-0000-0000-0000-000000000004"
        xmlns:piracy="http://midpoint.evolveum.com/xml/ns/samples/piracy">
    <name>Pirate</name>    
    <inducement>
    	<construction>
    		<resourceRef oid="10000000-0000-0000-0000-000000000004" type="c:ResourceType"/>
    		<kind>account</kind>
    		<attribute>
                <ref>ri:title</ref>
                <outbound>
                	<expression>
						<value>Bloody Pirate</value>
					</expression>
				</outbound>
            </attribute>
            <attribute>
                <ref>ri:location</ref>
                <outbound>
                	<source>
						<path>locality</path>
					</source>
					<condition>
						<script>
							<language>http://midpoint.evolveum.com/xml/ns/public/expression/language#Groovy</language>
							<code>
								locality?.getNorm() != "hidden"
							</code>
						</script>
					</condition>
				</outbound>
            </attribute>
            <attribute>
                <ref>ri:weapon</ref>
                <outbound>
                	<stregth>weak</stregth>
                	<expression>
						<value>cutlass</value>
					</expression>
				</outbound>
            </attribute>
            <attribute>
                <ref>ri:gossip</ref>
                <outbound>
                	<source>
                		<path>$user/fullName</path>
                	</source>
                	<source>
                		<path>$user/locality</path>
                	</source>
                	<expression>
						<script>
							<code>fullName + ' is the best pirate ' + ( locality == null ? 'the world' : locality ) + ' has ever seen'</code> 
						</script>
					</expression>
				</outbound>
            </attribute>
            <attribute>
                <ref>ri:sea</ref>
                <outbound>
                	<source>
                		<path>$assignment/extension/piracy:sea</path>
                	</source>
                	<expression>
						<asIs/>
					</expression>
					<condition>
						<script>
							<code>!sea?.isAllWhitespace()</code>
						</script>
					</condition>
				</outbound>
            </attribute>
    	</construction>
    </inducement>
    <authorization>
    	<action>http://midpoint.evolveum.com/xml/ns/test/authorization#loot</action>
    </authorization>
    <requestable>true</requestable>
</role>
