<objectTemplate xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
                oid="e0d5d585-da74-4523-b4f5-78cb54c0dccd">
    <name>template-device</name>
    <item>
        <ref>description</ref>
        <mapping>
            <documentation>From user to device: putting 'Used by ...' into device description.</documentation>
            <strength>strong</strength>
            <expression>
                <script>
                    <code>import com.evolveum.midpoint.xml.ns._public.common.common_3.UserType

                    assignee = midpoint.findAssignee(UserType.class)
                    assignee != null ? 'Used by ' + assignee.name + ' (' + assignee.fullName + ')' : 'Not used'</code>
                </script>
            </expression>
            <target>
                <path>description</path>
            </target>
        </mapping>
    </item>
</objectTemplate>
