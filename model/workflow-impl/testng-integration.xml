<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="unit" parallel="false">
    <test name="Legacy" preserve-order="true" parallel="false" verbose="10" enabled="true">
        <classes>
            <class name="com.evolveum.midpoint.wf.impl.association.TestAddAssociation"/>
        </classes>
    </test>
    <test name="Assignments lifecycle" preserve-order="true" parallel="false" verbose="10" enabled="true">
        <classes>
            <class name="com.evolveum.midpoint.wf.impl.assignments.TestAssignmentApprovalPlainImplicit"/>
            <class name="com.evolveum.midpoint.wf.impl.assignments.TestAssignmentApprovalGlobal"/>
            <class name="com.evolveum.midpoint.wf.impl.assignments.TestAssignmentApprovalMetaroleExplicit"/>
            <class name="com.evolveum.midpoint.wf.impl.assignments.TestAssignmentsAdvanced"/>
        </classes>
    </test>
    <test name="Object lifecycle" preserve-order="true" parallel="false" verbose="10" enabled="true">
        <classes>
            <class name="com.evolveum.midpoint.wf.impl.objects.TestObjectLifecycleApprovalPlain"/>
            <class name="com.evolveum.midpoint.wf.impl.objects.TestObjectLifecycleApprovalGlobal"/>
            <class name="com.evolveum.midpoint.wf.impl.objects.TestObjectLifecycleAdvanced"/>
        </classes>
    </test>
    <test name="Other" preserve-order="true" parallel="false" verbose="10" enabled="true">
        <classes>
            <class name="com.evolveum.midpoint.wf.impl.other.ManualResourceTest"/>
            <class name="com.evolveum.midpoint.wf.impl.other.TestSoD"/>
            <class name="com.evolveum.midpoint.wf.impl.other.TestMiscellaneous"/>
            <class name="com.evolveum.midpoint.wf.impl.other.TestDelegation"/>
            <class name="com.evolveum.midpoint.wf.impl.other.TestEscalation"/>
            <class name="com.evolveum.midpoint.wf.impl.other.TestParallelApprovals"/>
        </classes>
    </test>
</suite>
