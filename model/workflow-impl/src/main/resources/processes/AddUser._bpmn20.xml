        <activiti:formProperty id="requesterComment" name="Requester comment" type="string" required="false" readable="true" writable="false"></activiti:formProperty>
        <activiti:formProperty id="approvedByManagement" name="Approved by Management" type="boolean" required="false" readable="true" writable="true"></activiti:formProperty>
