<resource oid="10000000-0000-0000-0000-000000000004"
		  xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-1.xsd"
          xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-1.xsd"
          xmlns:q="http://prism.evolveum.com/xml/ns/public/query-2"
          xmlns:icfs="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/resource-schema-1.xsd"
          xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance/10000000-0000-0000-0000-000000000004"
          xmlns:xsd="http://www.w3.org/2001/XMLSchema"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
								  
	<name>Dummy Resource</name>
	<connectorRef oid="cccccccc-cccc-cccc-cccc-000000000004" type="c:ConnectorType">
		<filter>
			<and>
				<equal>
					<value>
						<connectorType>com.evolveum.icf.dummy.connector.DummyConnector</connectorType>
					</value>
				</equal>
			</and>
		</filter>
	</connectorRef>
	<namespace>http://midpoint.evolveum.com/xml/ns/public/resource/instance/10000000-0000-0000-0000-000000000004</namespace>
	<configuration xmlns:icfi="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/bundle/com.evolveum.icf.dummy/com.evolveum.icf.dummy.connector.DummyConnector"
	               xmlns:icfc="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/connector-schema-1.xsd">
					   
		<icfc:configurationProperties>
			<icfi:instanceId>foobar</icfi:instanceId>
		</icfc:configurationProperties>

	</configuration>
	
	<schema>
		<definition>
			<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
                     xmlns:icfs="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/resource-schema-1.xsd"
                     xmlns:ra="http://midpoint.evolveum.com/xml/ns/public/resource/annotation-1"
                     xmlns:tns="http://midpoint.evolveum.com/xml/ns/public/resource/instance/10000000-0000-0000-0000-000000000004"
                     xmlns:a="http://midpoint.evolveum.com/xml/ns/public/common/annotation-1.xsd"
                     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     elementFormDefault="qualified"
                     targetNamespace="http://midpoint.evolveum.com/xml/ns/public/resource/instance/10000000-0000-0000-0000-000000000004">
            <xsd:import namespace="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/resource-schema-1.xsd"/>
            <xsd:import namespace="http://midpoint.evolveum.com/xml/ns/public/common/annotation-1.xsd"/>
            <xsd:import namespace="http://midpoint.evolveum.com/xml/ns/public/resource/annotation-1"/>
            <xsd:complexType name="AccountObjectClass">
               <xsd:annotation>
                  <xsd:appinfo>
                     <ra:resourceObject/>
                     <ra:identifier>icfs:uid</ra:identifier>
                     <ra:secondaryIdentifier>icfs:name</ra:secondaryIdentifier>
                     <ra:displayNameAttribute>icfs:name</ra:displayNameAttribute>
                     <ra:namingAttribute>icfs:name</ra:namingAttribute>
                     <ra:nativeObjectClass>__ACCOUNT__</ra:nativeObjectClass>
                     <ra:account/>
                     <ra:default/>
                  </xsd:appinfo>
               </xsd:annotation>
               <xsd:sequence>
                  <xsd:element ref="icfs:uid">
                     <xsd:annotation>
                        <xsd:appinfo>
                           <a:displayName>ICF UID</a:displayName>
                           <a:access>read</a:access>
                        </xsd:appinfo>
                     </xsd:annotation>
                  </xsd:element>
                  <xsd:element name="fullname" type="xsd:string"/>
                  <xsd:element minOccurs="0" name="description" type="xsd:string"/>
                  <xsd:element maxOccurs="unbounded" minOccurs="0" name="interests" type="xsd:string"/>
                  <xsd:element ref="icfs:name">
                     <xsd:annotation>
                        <xsd:appinfo>
                           <a:displayName>ICF NAME</a:displayName>
                        </xsd:appinfo>
                     </xsd:annotation>
                  </xsd:element>
                  <xsd:element name="title" type="xsd:string" maxOccurs="unbounded"/>
                  <xsd:element name="ship" type="xsd:string"/>
                  <xsd:element name="location" type="xsd:string"/>
                  <xsd:element name="loot" type="xsd:int"/>
               </xsd:sequence>
            </xsd:complexType>
         </xsd:schema>
		</definition>
	</schema>

	<schemaHandling>
		<accountType>
			<name>user</name>
			<displayName>Default Account</displayName>
			<default>true</default>
			<objectClass>ri:AccountObjectClass</objectClass>
			<attribute>
				<ref>icfs:name</ref>
				<displayName>Username</displayName>
				<access>create</access>
				<access>read</access>
				<outbound>
				    <initial>true</initial>
					<expression>
						<code>
							concat($c:user/c:name, $c:iterationToken)
						</code>
					</expression>
				</outbound>
				<inbound>
					<target>
						$c:user/c:name
					</target>
				</inbound>
			</attribute>
			<attribute>
				<ref>icfs:uid</ref>
				<displayName>UID</displayName>
				<access>read</access>
			</attribute>
			<attribute>
				<ref>ri:fullname</ref>
				<displayName>Full Name</displayName>
				<access>create</access>
				<access>read</access>
				<access>update</access>
				<outbound>
					<expression>
						<code>
							$c:user/c:fullName
						</code>
					</expression>
				</outbound>
				<inbound>
					<target>
						$c:user/c:fullName
					</target>
				</inbound>
			</attribute>
			<attribute>
				<ref>ri:location</ref>
				<displayName>Location</displayName>
				<access>create</access>
				<access>read</access>
				<access>update</access>
				<outbound>
					<expression>
						<code>
							$c:user/c:locality
						</code>
					</expression>
				</outbound>
			</attribute>
			<iteration>
				<maxIterations>5</maxIterations>
			</iteration>
		</accountType>
	</schemaHandling>
	
	<synchronization>
		<enabled>true</enabled>
		<correlation>
			<q:equal>
				<q:path>.</q:path>
				<valueExpression>
					<ref>c:name</ref>
					<code>
						$c:account/c:attributes/icfs:name
					</code>
				</valueExpression>
			</q:equal>
		</correlation>
		<reaction>
            <situation>linked</situation>
            <action ref="http://midpoint.evolveum.com/xml/ns/public/model/action-1#modifyUser"/>
        </reaction>
        <reaction>
            <situation>deleted</situation>
            <action ref="http://midpoint.evolveum.com/xml/ns/public/model/action-1#unlinkAccount"/>
        </reaction>
        <reaction>
            <situation>unlinked</situation>
            <action ref="http://midpoint.evolveum.com/xml/ns/public/model/action-1#linkAccount"/>
        </reaction>
        <reaction>
            <situation>unmatched</situation>
        </reaction>
	</synchronization>

</resource>
