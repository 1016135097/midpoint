<role oid="12345678-d34d-b33f-f00d-555555556666"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-1.xsd"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-1.xsd"
        xmlns:t="http://prism.evolveum.com/xml/ns/public/types-2"
        xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance/10000000-0000-0000-0000-000000000004">
    <name>Pirate</name>    
    <assignment>
    	<accountConstruction>
    		<resourceRef oid="10000000-0000-0000-0000-000000000004" type="c:ResourceType"/>
    		<attribute>
                <ref>ri:title</ref>
				<value>Bloody Pirate</value>
            </attribute>
            <attribute>
                <ref>ri:location</ref>
				<path>
                	locality
				</path>
				<condition>
					<language>http://midpoint.evolveum.com/xml/ns/public/expression/language#Groovy</language>
					<code>
						user?.getLocality()?.getNorm() != "hidden"
					</code>
				</condition>
            </attribute>
    	</accountConstruction>
    </assignment>    
</role>
