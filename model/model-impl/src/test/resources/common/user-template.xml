<userTemplate oid="10000000-0000-0000-0000-000000000002"
   xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns='http://midpoint.evolveum.com/xml/ns/public/common/common-1.xsd'
   xmlns:c='http://midpoint.evolveum.com/xml/ns/public/common/common-1.xsd'
   xmlns:t='http://prism.evolveum.com/xml/ns/public/types-2'>
    <name>Default User Template</name>
    <propertyConstruction>
        <property>c:fullName</property>
        <valueConstruction>
        	<initial>true</initial>
            <expression>
            	<code>
                    declare namespace c="http://midpoint.evolveum.com/xml/ns/public/common/common-1.xsd";
                    declare namespace t="http://prism.evolveum.com/xml/ns/public/types-2";
                    concat($c:user/c:givenName/t:orig,' ',$c:user/c:familyName/t:orig)
                </code>
            </expression>
        </valueConstruction>
    </propertyConstruction>
    <propertyConstruction>
        <property>c:assignment</property>
        <valueConstruction>
        	<initial>true</initial>
            <value>
            	<assignment>
					<accountConstruction>
						<resourceRef oid="10000000-0000-0000-0000-000000000003" type="c:ResourceType"/>
					</accountConstruction>
				</assignment>
            </value>
        </valueConstruction>
    </propertyConstruction>
</userTemplate>
