<role xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
	  oid="8e56a98a-bcb9-4178-94f2-5488da473132">
	<name>propagator</name>
	<inducement>
		<focusMappings>
			<mapping>
				<name>title -> honorificPrefix</name>
				<source>
					<path>title</path>
				</source>
				<target>
					<path>honorificPrefix</path>
				</target>
			</mapping>
			<mapping>
				<name>description -> title</name>
				<source>
					<path>description</path>
				</source>
				<target>
					<path>title</path>
				</target>
			</mapping>
			<mapping>
				<name>fullName -> description</name>
				<source>
					<path>fullName</path>
				</source>
				<target>
					<path>description</path>
				</target>
			</mapping>
			<mapping>
				<name>organization -> fullName</name>
				<source>
					<path>organization</path>
				</source>
				<expression>
					<script>
						<relativityMode>absolute</relativityMode>
						<code>
							organization
									.collect { basic.stringify(it) }
									.sort()
									.join(', ')
						</code>
					</script>
				</expression>
				<target>
					<path>fullName</path>
				</target>
			</mapping>
			<mapping>
				<name>organizationalUnit -> organization</name>
				<source>
					<path>organizationalUnit</path>
				</source>
				<target>
					<path>organization</path>
				</target>
			</mapping>
		</focusMappings>
	</inducement>
</role>