<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<systemConfiguration oid="00000000-0000-0000-0000-000000000001" version="0"
	xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-1.xsd">
	<defaultUserTemplate>
		<name>Default User Template</name>
		<propertyConstruction>
			<property>i:fullName</property>
			<valueConstruction default="true">
				<valueExpression>
					declare namespace i="http://midpoint.evolveum.com/xml/ns/public/common/common-1.xsd";
					concat($i:user/i:givenName,' ',$i:user/i:familyName)
            </valueExpression>
			</valueConstruction>
		</propertyConstruction>
		<accountConstruction>
			<resourceRef oid="10000000-0000-0000-0000-000000000003" type="ResourceType" />
			<type>Default Account</type>
		</accountConstruction>
	</defaultUserTemplate>
	<name>SystemConfiguration</name>
	<logging>
		<logger>
			<level>all</level>
			<category>category1</category>
			<category>category2</category>
			<component>util</component>
			<component>common</component>
			<component>model</component>
			<component>provisioning</component>
			<component>repository</component>
			<component>gui</component>
			<package>com.evolveum.midpoint</package>
			<appender>File Appender</appender>
		</logger>
		<appender xsi:type="FileAppenderConfigurationType" name="File Appender" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
			<pattern>%d{HH:mm:ss,SSS} %-5p [%c] - %m%n</pattern>
			<filePath>${catalina.base}/logs/idm.log</filePath>
			<maxFileSize>1024</maxFileSize>
		</appender>
	</logging>
</systemConfiguration>
