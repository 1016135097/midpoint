<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean name="midpointConfiguration" class="com.evolveum.midpoint.init.StartupConfiguration"
		init-method="init">
		<constructor-arg value="test-config.xml" />
	</bean>

	<bean name="repositoryFactory" class="com.evolveum.midpoint.init.RepositoryFactory"
		init-method="init" destroy-method="destroy" />

	<bean name="repositoryService" factory-bean="repositoryFactory"
		factory-method="getRepositoryService" class="com.evolveum.midpoint.repo.api.RepositoryService"
		depends-on="repositoryFactory" init-method="init" destroy-method="close"></bean>

	<bean name="protector" class="com.evolveum.midpoint.common.crypto.Protector" scope="singleton" init-method="init">
		<property name="keyStorePath" value="com/../keystore.jceks" />
		<property name="keyStorePassword" value="changeit" />
		<property name="encryptionKeyDigest" value="HF6JRsNMeJt6alihT44CXKgpe0c=" />		
	</bean> 
</beans>
