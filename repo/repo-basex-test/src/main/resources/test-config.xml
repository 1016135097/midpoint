<configuration>
	<midpoint>
		<repository>
			<repositoryServiceFactoryClass>com.evolveum.midpoint.repo.xml.XmlRepositoryServiceFactory</repositoryServiceFactoryClass>
			<runServer>true</runServer>
			<embedded>true</embedded> <!-- embedded is applicable only if runServer > true -->
			<shutdown>false</shutdown>
			<dropDatabase>true</dropDatabase>
			<initialDataPath></initialDataPath> <!-- initialDataPath - path containing xmls that should be loaded into DB -->
			<databaseName>midPoint-test</databaseName> <!-- database name -->
			<serverPath>target/basex-data</serverPath>
			<!-- client connection properties -->
			<host>localhost</host>
			<port>19840</port>
			<username>admin</username>
			<password>admin</password>
		</repository>
		<icf>
			<scanClasspath>true</scanClasspath>
			<scanDirectory>/C:/tmp</scanDirectory>
			<scanDirectory>/var/tmp</scanDirectory>
		</icf>
	</midpoint>
</configuration>