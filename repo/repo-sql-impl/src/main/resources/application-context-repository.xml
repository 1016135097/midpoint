<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd"
       default-lazy-init="true" default-autowire="byName">

    <bean id="sqlRepositoryFactory" class="com.evolveum.midpoint.repo.sql.SqlRepositoryFactory"
            depends-on="repositoryFactory" />

    <bean id="sqlDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="#{sqlRepositoryFactory.sqlConfiguration.driverClassName}"/>
        <property name="url" value="#{sqlRepositoryFactory.sqlConfiguration.jdbcUrl}"/>
        <property name="username" value="#{sqlRepositoryFactory.sqlConfiguration.jdbcUsername}"/>
        <property name="password" value="#{sqlRepositoryFactory.sqlConfiguration.jdbcPassword}"/>
    </bean>

    <!-- Hibernate session factory -->
    <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean"
          depends-on="sqlDataSource">

        <property name="dataSource">
            <ref bean="sqlDataSource"/>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">#{sqlRepositoryFactory.sqlConfiguration.hibernateDialect}</prop>
                <prop key="hibernate.show_sql">true</prop>
                <prop key="hibernate.format_sql">true</prop>
                <prop key="hibernate.hbm2ddl.auto">#{sqlRepositoryFactory.sqlConfiguration.hibernateHbm2ddl}</prop>
                <prop key="hibernate.id.new_generator_mappings">true</prop>
                <!-- connection pool -->
                <prop key="hibernate.c3p0.min_size">5</prop>
                <prop key="hibernate.c3p0.max_size">20</prop>
                <prop key="hibernate.c3p0.timeout">300</prop>
                <prop key="hibernate.c3p0.max_statements">50</prop>
                <prop key="hibernate.c3p0.idle_test_period">3000</prop>
            </props>
        </property>
        <property name="annotatedPackages">
            <list>
                <value>com.evolveum.midpoint.repo.sql.type</value>
            </list>
        </property>
        <property name="packagesToScan">
            <list>
                <value>com.evolveum.midpoint.repo.sql.data.a1</value>
                <!--<value>com.evolveum.midpoint.repo.sql.data.atest</value>-->
                <!--<value>com.evolveum.midpoint.repo.sql.data.common</value>-->
            </list>
        </property>
    </bean>
</beans>