<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-lazy-init="true" default-autowire="byName">

    <bean id="sqlRepositoryBeanPostProcessor" class="com.evolveum.midpoint.repo.sql.testing.SQLRepositoryBeanPostProcessor"/>

    <bean id="sqlRepositoryFactory" class="com.evolveum.midpoint.repo.sql.testing.TestSqlRepositoryFactory"
          depends-on="repositoryFactory"/>

    <bean id="sqlAuditFactory" class="com.evolveum.midpoint.repo.sql.SqlAuditServiceFactory"/>

    <import resource="ctx-repository-session.xml"/>
</beans>