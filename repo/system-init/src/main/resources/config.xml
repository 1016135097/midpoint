<configuration>
	<midpoint>
		<repository>
			<repositoryServiceFactoryClass>com.evolveum.midpoint.repo.xml.XmlRepositoryServiceFactory
			</repositoryServiceFactoryClass>
			<runServer>true</runServer>
			<embedded>true</embedded> <!-- embedded is applicable only if runServer > true -->
			<shutdown>true</shutdown>
			<dropDatabase>false</dropDatabase>
			<initialDataPath>${midpoint.home}</initialDataPath> <!-- initialDataPath - path containing xmls that should be loaded into DB -->
			<databaseName>midPoint</databaseName> <!-- database name -->
			<!-- client connection properties -->
			<host>localhost</host>
			<port>1984</port>
			<username>admin</username>
			<password>admin</password>
		</repository>
		<icf>
			<scanClasspath>true</scanClasspath>
			<scanDirectory>${midpoint.home}/icf-connectors</scanDirectory>
		</icf>
		<keystore>
			<keyStorePath>${midpoint.home}/keystore.jceks</keyStorePath>
			<keyStorePassword>changeit</keyStorePassword>
			<encryptionKeyAlias>default</encryptionKeyAlias>
		</keystore>
	</midpoint>
</configuration>